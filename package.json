{
  "name": "uber-utilities",
  "version": "1.0.0",
  "description": "Uber Utilities - Download and merge Uber receipts",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "watch": "webpack --watch --mode development",
    "build": "webpack --mode production",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "keywords": [
    "uber",
    "receipts",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.uberreporter.app",
    "productName": "Uber Utilities",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "dist/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "title": "Uber Utilities",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "style-loader": "^3.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "archiver": "^7.0.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
